{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "lib": [
      "ESNext",
      "deno.window"
    ]
  },
  "lint": {
    "files": {
      "include": [
        "mod.ts",
      "deps.ts",
      "example/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "mod.ts",
      "deps.ts",
      "example/"
    ],
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "always",
    "singleQuote": true,
    "useTabs": false
  },
  "tasks": {
    "build": "bash ./example/cache.sh && deno run -A ./example/build.ts",
    "test": "bash ./test/cache.sh && deno test -A",
    "debug:build": "bash ./example/cache.sh && deno run -A --inspect-brk ./example/build.ts",
    "debug:test": "bash ./test/cache.sh && deno test -A --inspect-brk"
  }
}
