{
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "jsx": "react-jsx",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "importMap": "import_map.json",
  "tasks": {
    "build": "deno run -A build.ts",
    "cache": "rm -f deno.lock && deno cache **/*.ts",
    "clean": "rm -f bundle.js"
  }
}
